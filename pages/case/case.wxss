.main_right{
    width: 750rpx;
    /* height: 100%; */
    background: #f4f4f4;
    padding:78rpx 0rpx 0rpx 0rpx 
}
.banner{
    width: 750rpx;
    height: 250rpx;
    margin: 0 auto;
}
.banner image{
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
}
.main_right-text{
    width: 100%;
    display: inline-block;
    height:97rpx;
    text-align: center;
    line-height: 97rpx;
    font-size: 36rpx;

}
.right_list{
    width: rpx;
    height: auto;
    display: flex;
    justify-content: left;
    flex-wrap: wrap;
    padding: 0rpx 20rpx;
}
.list{
    margin-right:8rpx; 
    width: 215rpx;
    height: 292rpx;
    background:#fff;
    border-radius: 6rpx;
    margin-left: 10rpx;
    margin-bottom: 30rpx; 
}
.list_up{
    width: 215rpx;
    height: 200rpx;
}
.list_up image{
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
    background: red
}
.list_dow{
    width: 215rpx;
    height: 92rpx;
    padding: 10rpx 10rpx;
    box-sizing: border-box;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.list_dow text:first-child{
    display: block;
    font-size: 20rpx;
}
.list_dow text:last-child{
    margin-top: 10rpx;
    display:block;
    font-size: 20rpx;
    color: red
}
.list_dow  image{
    width: 20rpx;
    height: 5rpx;
}
.mincate{
    display: flex;
    justify-content: space-evenly;
    font-size: 28rpx;
    margin:20rpx 20rpx 
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
}


.case{
    width: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}
.case_main{
    width: 100%;
    height: 230rpx;
    background: #fff;
    border-radius: 6rpx;
    box-shadow: 0rpx 8rpx  8rpx rgba(0, 0, 0, 0.3);
    padding: 19rpx 42rpx 19rpx 19rpx;
    box-sizing: border-box;
    clear: both;
    margin-bottom: 19rpx;
}
.case_img{
    width: 192rpx;
    height: 192rpx;
    float: left;
}
.case_img image{
    width: 100%;
    height: 100%;
    background: red;
    border-radius: 6rpx;
}
.case_text{
    float: right;
    width:406rpx;
    height: 192rpx 
}
.case_text text:first-child{
    display: inline-block;
    font-size: 30rpx;
    color: rgb(51, 51, 51);
    margin-bottom: 20rpx;
    margin-left: 30rpx;
    position: relative
}
.case_text text:first-child::before {
				content: '';
				position: absolute;
				left: -30rpx;
				top: 15rpx;
				width: 15rpx;
                height: 15rpx;
                background: #ffc001;
			}
.case_text text:last-child{
    display: inline-block;
    font-size: 24rpx;
    line-height:40rpx;
    color: rgb(102, 102,102);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}