/* pages/Detail/Detail.wxss */
.toptext{
    width: 100%;
    padding: 0rpx 20rpx;
    clear: both;
    box-sizing: border-box;
    height: 40rpx;
    line-height: 40rpx;
}
.toptext text:first-child{
  float: left;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  width: 80rpx;
  border-left: 4rpx #ffc001 solid;
  text-align: center;
}
.toptext text:last-child{
  float: right;
  font-size: 24rpx;
  color: rgb(153, 153, 153)
}
.videos{
    width: 100%;
    height: 354rpx;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}
.videos video{
    width: 100%;
    height: 100%;
}
.desc{
    width: 100%;
    text-align: center;
}
.desc text{
    display: block;
    width: 100%;
}
.title{
    text-align: center;
}
.img{
    width: 100%;
    height: 320rpx;
}
.img image{
    width: 100%;
    height: 320rpx;
    background: red
}
.footer{
    width: 100%;
    padding: 20rpx 20rpx;
    display: flex;
    justify-content: left;
    flex-wrap: wrap;
    position: fixed;
    bottom:0rpx; 
    box-sizing: border-box;
}
.footer-child{
    width: 50%;
    height: 60rpx;
}
.footer-child image{
 width: 44rpx;
 height: 44rpx;
 vertical-align: middle;
