/* pages/home/home.wxss */
.page{
    background: #f4f4f4;
    padding-bottom: 120rpx;
   
}
button::after {
  border: none;
}
.swiper_box {
  height: auto;
  position: relative;
}
.swipers {
  height: 380rpx;
}
.swiper_box image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}
/*用来包裹所有的小圆点  */
.dots {
  height: 14rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 20rpx;
  bottom: 17rpx;

}
/*未选中时的小圆点样式 */
.dot {
  width: 6rpx;
  height: 14rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  background-color: #f4f4f4;
  transform: rotate(25deg);
}
/*选中以后的小圆点样式  */
.active {
  width: 6rpx;
  height: 14rpx;
  border-radius: 20rpx;
  background-color: #cccccc;
  transform: rotate(25deg);
}
.cate{
    margin-top: 20rpx;
    width: 100%;
    background: #fff;
    padding: 35rpx 0rpx;
    box-sizing: border-box;
}
.cate_main{
  display: flex;
  justify-content:left ;
  align-items: center;
  flex-wrap: wrap;
}
.cate_child{
 width: 134rpx;
 height: 190rpx;
 text-align: center;
 /* margin:20rpx 25rpx; */
}
.cate_child image{
  width: 134rpx;
