.case{
    width: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}
.case_main{
    width: 100%;
    height: 230rpx;
    background: #fff;
    border-radius: 6rpx;
    box-shadow: 0rpx 8rpx  8rpx rgba(0, 0, 0, 0.3);
    padding: 19rpx 42rpx 19rpx 19rpx;
    box-sizing: border-box;
    clear: both;
    margin-bottom: 19rpx;
}
.case_img{
    width: 192rpx;
    height: 192rpx;
    float: left;
}
.case_img image{
    width: 100%;
    height: 100%;
    background: red;
    border-radius: 6rpx;
}
.case_text{
    float: right;
    width:406rpx;
    height: 192rpx 
}
.case_text text:first-child{
    display: inline-block;
    font-size: 30rpx;
    color: rgb(51, 51, 51);
    margin-bottom: 20rpx;
    margin-left: 30rpx;
    position: relative
}
.case_text text:first-child::before {
				content: '';
				position: absolute;
				left: -30rpx;
				top: 15rpx;
				width: 15rpx;
                height: 15rpx;
                background: #ffc001;
			}
.case_text text:last-child{
    display: inline-block;
    font-size: 24rpx;
    line-height:40rpx;
    color: rgb(102, 102,102);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}