<view class='page' scroll-y="true">
  <!-- banner -->
  <view class='swiper_box'>
    <swiper class='swipers' autoplay="true" current="{{currentSwiper}}" interval='2000'  circular="true"autoplay='true' bindchange="swiperChange">
      <block wx:for="{{bannerList}}" wx:key>
        <swiper-item>
          <image class="swiper_image" src="{{https+item.url}}" lazy-load="true" />
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
        <block wx:for="{{bannerList}}" wx:key>
            <view class="dot{{index == currentSwiper ? ' active' : ''}}"></view>
        </block>
    </view>
  </view>
  <!-- cate -->
  <view class='cate'>
    <view class='cate_main' >
      <view class='cate_child' wx:for="{{cateList}}" wx:key bindlongtap="longTap" data-id='{{item.id}}'>
       <image src='{{https+item.icon}}' data-id='{{item.id}}'></image>
       <text data-id='{{item.id}}'>{{item.name}}</text>
      </view>
    </view>
  </view>
  <!-- 经典案例 -->
  <view class='caselist'>
    <text>经典案例</text>
  </view>
  <!-- list -->
  <view class='case'>
    <view class='case_main'>
