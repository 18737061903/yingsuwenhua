/* pages/contact/contact.wxss */
.page{
    position: relative;
    box-sizing: border-box;
  }
.topimg{
    width: 100%;
    height: auto;
    
}
.topimg image{
    width: 100%;
    /* opacity: 0.7; */
}
.address{
    width: 100%;
    box-sizing: border-box;
    font-size: 30rpx;
    padding: 10rpx 30rpx;
    border-bottom: 1rpx solid #ccc;
    clear: both;
    overflow: auto;
}
.address:last-child{
    border:none; 
}
.address_left{
    float: left
}
.address_left text:first-child{
    /* display: inline-block; */
    width: 150rpx;
    color: #777;
     float: left
}
.address_left text:nth-child(2){
    width: 489rpx;
     float: right;
}
.address_right{
   float: right
}
.address_right image{
   width: 32rpx;
   height: 32rpx;
}
.msgCompay{
    padding: 0rpx 10rpx;
    padding-bottom: 20rpx;
    border-bottom: 10rpx solid #ccc;
}

.footer{
  padding: 0 10rpx;
}
.footertext{
    padding: 10rpx 30rpx;
    border-bottom:1rpx #ccc solid; 
}
.footertext text{
   display: inline-block;
   padding-left:20rpx; 
   width: 200rpx;
   font-size: 30rpx;
   border-left:5rpx yellow solid
}
.footer_msg{
    display: inline-block;
    padding: 10rpx 22rpx;
    font-size:30rpx; 
      text-indent: 2em;
}




.image{
    width:100vw;
    height: 100vh;
    position: absolute;
    opacity: 0.5;
    left: 0;
}

.text{
   font-size: 30rpx;
   text-indent: 2em;
   text-align: left;
   line-height: 50rpx;
   color: #000
}
.text view{
     color: #000
}
.contactText {
    margin-top:60rpx;
}
.contactText text{
    color: #000;
  display: block;
  font-size: 32rpx;
}
.footerimg{
    position: absolute;
    left: 50%;
    margin-left: -150rpx;
    bottom: -310rpx;
    width: 250rpx;
    height: 250rpx;
}
.footerimg image{
    width: 100%;
    height: 100%;
}


/* 跑马灯 */
 .videoLed {
    animation:  video 15s linear infinite;
 }
/* @keyframes kf-marque-animation{ 0% { transform: translateX(0); } 100% { transform: translateX(-100.3%); } } */
 @keyframes video {
    0% {
        transform: translate3d(0, 0, 0);
       
    }
    49.8% {
        transform: translate3d(-750rpx, 0, 0)
    }
    49.9% {
        transform: translate3d(-7500rpx, 0, 0)
    }
    50% {
       transform: translate3d(7500rpx, 0, 0)
    }
    50.1% {
        transform: translate3d(750rpx, 0, 0)
    }
    100% {
        transform: translate3d(0, 0, 0)
    }
}