/* pages/business/business.wxss */
.page{
    background: #f4f4f4;
    clear: both;
    height: 100vh;

}
.main_left{
    width: 130rpx;
    background: #fff;
    float: left;
    height: 100vh;
    position: relative;
}
.main_text{
    width: 130rpx;
    height: 112rpx;
    text-align: center;
    line-height: 112rpx;
    position: relative;
}
.main_text text{
    display: inline-block;
    width: 130rpx;
    height: 82rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 82rpx;
}
.line{
    position: absolute;
    top: 0;
    left: 0;
    /* width: 122rpx; */
    height: 112rpx;
    /* background:rgba(0, 0, 0, 0.1); */
    transition: all .3s ease-out .1s;
    border-left:  6rpx solid #ffc001;
    }

.acviewtiv{
    background: #f4f4f4;
    transition: all 1s;
}
.main_right{
    width: 620rpx;
    height: 100%;
    float: right;
    background: #f4f4f4;
}
.banner{
    width: 568rpx;
    height: 200rpx;
    margin: 0 auto;
}
.banner image{
    width: 568rpx;
    height: 200rpx;
    border-radius: 6rpx;
}
.main_right-text{
    width: 100%;
    display: inline-block;
    height:97rpx;
    text-align: center;
    line-height: 97rpx;
    font-size: 36rpx;
}
.right_list{
    width: 628rpx;
    height: auto;
    display: flex;
    justify-content: left;
    flex-wrap: wrap;
}
.list{
    margin-right:8rpx; 
    width: 265rpx;
    height: 292rpx;
    background:#fff;
    border-radius: 6rpx;
    margin-left: 30rpx;
    margin-bottom: 30rpx; 
}
.list_up{
    width: 265rpx;
    height: 200rpx;
}
.list_up image{
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
    /* background: red */
}
.list_dow{
    width: 100%;
    height: 92rpx;
    padding: 10rpx 10rpx;
    box-sizing: border-box;
     overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.list_dow text:first-child{
    display: block;
    font-size: 20rpx;
}
.list_dow text:last-child{
    margin-top: 10rpx;
    display:block;
    font-size: 20rpx;
    color: red
}
.list_dow  image{
    width: 20rpx;
    height: 5rpx;
}
.mincate{
    width: 100%;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content:space-evenly;
    flex-wrap: wrap;
      color: #888;
}
.mincate text{
    display: inline-block;
    margin: 5rpx 0px;
    padding: 3rpx 20rpx;
    text-align: center;
    border-radius:10rpx; 
    font-size:26rpx; 
  
    background:#fff;
}
.activis{
 transition: all .3s ease-out .1s;
 color: #ffc001;
}
